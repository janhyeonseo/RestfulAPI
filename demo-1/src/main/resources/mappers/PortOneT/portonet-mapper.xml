<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.portoneT.PortOneTDao">

	<insert id="insert"
		parameterType="com.example.portoneT.PortOneTVO">
		insert into mpay
		values (bidx.nextval , #{mpaynum},#{membernum}, #{mpaymethod},
			#{mpayproduct}, #{mpayprice}, #{mpaydate},
			#{mpaygym}, #{mpayperiod}, #{mpaytime},#{trainername}, #{ggoodsnum}, null,
			#{gymnum}, 0)
	</insert>
	
	<select id="selectf"
		parameterType="com.example.portoneT.PortOneTVO" 
		resultType="com.example.portoneT.PortOneTVO">
		select  * from  mpay where  mpaynum = #{mpaynum}
	</select>
	
	<!-- 
	<select id="selectf"
		parameterType="com.example.portoneT.PortOneTVO" 
		resultType="com.example.portoneT.PortOneTVO">
		select  * from  mpay where  idx = (SELECT MAX(idx) FROM mpay)
	</select>
	 -->
</mapper>
